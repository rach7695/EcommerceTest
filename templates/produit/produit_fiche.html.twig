{% extends 'base.html.twig' %}

{% block h1 %}{{produit.titre|capitalize}}{% endblock %}

{% block  body %}

<a class="btn btn_dark" href="{{path('produit_afficher')}}">retour</a>
{#<h2>prix : {{produit.prix}}</h2>#}

<table class="table table-hover mt-3">

        <tr>
            <th>ID</th>
            <td>{{ produit.id }}</td>
        </tr>

        <tr>
            <th>Titre</th>
            <td>{{ produit.titre }}</td>
        </tr>

        <tr>
            <th>Prix</th>
            <td>{{ produit.prix }} €</td>
        </tr>

        <tr>
            <th>Description</th>
            <td>
                {% if produit.description %}
                    {{ produit.description }}
                {% else %}
                    <span class="fst-italic text-danger">Non renseignée</span>
                {% endif %}
            </td>
        </tr>

    </table>

{% endblock %}